<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/giv_profile_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"

                />
            <EditText
                android:id="@+id/get_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ad"
                android:inputType="text"
                android:minHeight="48dp"
                />

            <EditText
                android:id="@+id/get_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Soyad"
                android:inputType="text"
                android:minHeight="48dp"
                />

            <EditText
                android:id="@+id/get_entry_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giriş Yılı"
                android:inputType="number"
                android:minHeight="48dp"
                />

            <EditText
                android:id="@+id/get_graduation_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mezun Yılı"
                android:inputType="number"
                android:minHeight="48dp"
                />

            <EditText
                android:id="@+id/get_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-posta"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/get_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Eski Şifre"
                android:inputType="textPassword"
                android:minHeight="48dp"
                />
            <EditText
                android:id="@+id/get_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Yeni Şifre"
                android:inputType="textPassword"
                android:minHeight="48dp"
                />
            <EditText
                android:id="@+id/get_egitim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Eğitim (Lisans, Yüksek Lisans, Doktora)"
                android:inputType="text"
                android:minHeight="48dp"
                />
            <EditText
                android:id="@+id/get_guncelIs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Güncel İş Bilgileri (Ülke/ Şehir/ Firma)"
                android:inputType="text"
                android:minHeight="48dp"
                />

            <EditText
                android:id="@+id/gtelefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefon Numarası"
                android:inputType="phone"
                android:minHeight="48dp" />


            <TextView
                android:id="@+id/gtv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fotoğraf Seç" />

            <ImageView
                android:id="@+id/giv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btn_guncelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bilgilerimi Güncelle" />
            <Button
                android:id="@+id/btn_SifreGuncelle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Şifre Güncelle" />
            <Button
                android:id="@+id/btn_sil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Kaydı Sil" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
